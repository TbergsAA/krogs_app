<%= form_for [@category, @product], url: {action: "create"} do |f| %>

  <%= f.label :Name %>
  <%= f.text_field :name %><br>
  <%= f.label :Price %>
  <%= f.text_field :price %><br>
  <%= f.label :Components %>
  <%= f.hidden_field :components, value: @product.components.join(',') %><br>
  <%= f.label :Available_count %>
  <%= f.text_field :available_count %><br>
  <%= f.submit "Create" %>

<% end %>