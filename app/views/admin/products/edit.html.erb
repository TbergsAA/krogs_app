<% if @product.errors.any? %>
<ul>
  <% @product.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for [@category, @product], url: {action: "update"} do |f| %>

<%= f.label :Name %>
  <%= f.text_field :name %><br>
  <%= f.label :Price %>
  <%= f.text_field :price %><br>
  <%= f.label :Components %>
  <%= f.hidden_field :components, value: @product.components.join(',') %><br>
  <%= f.label :Available_count %>
  <%= f.text_field :available_count %><br>
  <%= f.submit "Update" %>
<% end %>
